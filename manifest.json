{
  "manifest_version": 3,
  "name": "Contexify",
  "version": "1.0",
  "description": "Adds color-coded, thematic hyperlinks to Project Gutenberg texts.",
  "permissions": [
    "contextMenus",
    "scripting",
    "activeTab",
    "experimental"
  ],
  "host_permissions": [
    "https://www.gutenberg.org/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.gutenberg.org/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
